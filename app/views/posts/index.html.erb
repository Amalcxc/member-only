<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <% if user_signed_in? %>
        <th>Author's name</th>
        <th colspan="4"></th>
      <% else %>
      <th colspan="3"></th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <% if user_signed_in? %>
          <% k = post.user_id%>
          <% p = @users.where(id: k)%>
          <% p.each do | i |%>
            <td><%= i.name%></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
   <p>
     <%= link_to “Logout”, destroy_user_session_path, method: :delete %>
   </p>
 <% else %>
 <p class=“control”>
   <%= link_to ‘Sign In’, new_user_session_path%>
 </p>
 <p class=“control”>
   <%= link_to ‘Sign Up’, new_user_registration_path%>
 </p>
 <% end %>
